<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <display-name>Enterprise Messaging Infrastructure</display-name>
    <description>Enterprise Messaging Infrastructure Web Module</description>

    <!-- the Sender servlet -->
    <servlet>
      <servlet-name>sender</servlet-name>
      <description>This servlet interfaces with the EMI.</description>
      <servlet-class>nz.govt.nzqa.emi.client.servlet.SenderServlet</servlet-class>
      <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet-mapping>
      <servlet-name>sender</servlet-name>
      <url-pattern>/sender</url-pattern>
    </servlet-mapping>

    <!-- the Admin servlet -->
    <servlet>
      <servlet-name>admin</servlet-name>
      <description>This servlet administers the EMI.</description>
      <servlet-class>nz.govt.nzqa.emi.client.servlet.AdministrationServlet</servlet-class>
      <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet-mapping>
      <servlet-name>admin</servlet-name>
      <url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <!-- the Spring servlet -->
    <servlet>
      <servlet-name>spring</servlet-name>
      <description>This servlet interfaces with Spring.</description>
      <servlet-class>nz.govt.nzqa.emi.client.servlet.SpringServlet</servlet-class>
      <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet-mapping>
      <servlet-name>spring</servlet-name>
      <url-pattern>/spring</url-pattern>
    </servlet-mapping>

</web-app>